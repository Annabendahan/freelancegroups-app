    </div>

    <% end %>
  <%end%>

<br>
<br>
<br>


<h4> Events  </h4>

<% if @events.count < 1 %>
     <p> No events yet </p>
  <%else%>
<% @events.each do |e| %>

<p> <%= e.title %>
<%= e.description %>
